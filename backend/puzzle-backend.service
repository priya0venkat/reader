[Unit]
Description=Puzzle Game Backend API Server
After=network.target

[Service]
Type=simple
User=abhishekverma
WorkingDirectory=/home/abhishekverma/reader/puzzle-game
Environment="NODE_ENV=production"
Environment="GOOGLE_APPLICATION_CREDENTIALS=/home/abhishekverma/.gcp/puzzle-game-credentials.json"
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=puzzle-backend

[Install]
WantedBy=multi-user.target
